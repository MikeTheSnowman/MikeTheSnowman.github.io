{
	"name": "mikethesnowman.github.io",
	"version": "0.0.1",
	"private": true,
	"scripts": {
		"dev": "vite dev",
		"build": "vite build",
		"preview": "vite preview",
		"check": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json",
		"check:watch": "svelte-kit sync && svelte-check --tsconfig ./tsconfig.json --watch",
		"lint": "prettier --check . && eslint .",
		"format": "prettier --write .",
		"story:dev": "histoire dev",
		"story:build": "histoire build",
		"story:preview": "histoire preview",
		"optimize-images": "image-transmutation --run --sourceFolder ./build/images --targetFolder ./build/images --inputFormats 'gif' --inputFormats 'webp' --inputFormats 'jpg' --inputFormats 'jpeg' --inputFormats 'png' --outputFormats 'png' --outputFormats 'webp' --outputFormats 'avif'",
		"optimize-images-windows": "powershell -C \"image-transmutation --run --sourceFolder ./build/images --targetFolder ./build/images --inputFormats 'gif' --inputFormats 'webp' --inputFormats 'jpg' --inputFormats 'jpeg' --inputFormats 'png' --outputFormats 'png' --outputFormats 'webp' --outputFormats 'avif'\"",
		"copy-gifs": "npx copyfiles -u 4 \"./static/images/posts/**/*.gif\" \"./build/images/\"",
		"postbuild": "npm run optimize-images && npm run copy-gifs && svelte-sitemap --domain https://mikethesnowman.github.io/"
	},
	"devDependencies": {
		"@histoire/plugin-svelte": "^0.17.17",
		"@sveltejs/adapter-auto": "^3.0.0",
		"@sveltejs/adapter-static": "^3.0.5",
		"@sveltejs/kit": "^2.0.0",
		"@sveltejs/vite-plugin-svelte": "^3.0.0",
		"@types/dateformat": "^5.0.2",
		"@types/eslint": "^9.6.0",
		"copyfiles": "^2.4.1",
		"dateformat": "^5.0.3",
		"eslint": "^9.0.0",
		"eslint-config-prettier": "^9.1.0",
		"eslint-plugin-svelte": "^2.36.0",
		"globals": "^15.0.0",
		"histoire": "^0.17.17",
		"image-transmutation": "^0.1.3",
		"mdsvex": "^0.12.3",
		"prettier": "^3.1.1",
		"prettier-plugin-svelte": "^3.1.2",
		"reading-time": "^1.5.0",
		"rehype-autolink-headings": "^7.1.0",
		"rehype-external-links": "^3.0.0",
		"rehype-slug": "^6.0.0",
		"sass": "^1.79.3",
		"striptags": "^3.2.0",
		"svelte": "^4.2.7",
		"svelte-check": "^4.0.0",
		"svelte-sitemap": "^2.6.0",
		"typescript": "^5.0.0",
		"typescript-eslint": "^8.0.0",
		"vite": "^5.0.3"
	},
	"type": "module",
	"dependencies": {
		"@fontsource/inter": "^5.1.0",
		"@fontsource/merriweather": "^5.1.0",
		"@fontsource/ubuntu-mono": "^5.1.0"
	}
}
